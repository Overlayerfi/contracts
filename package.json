{
  "name": "contract",
  "version": "1.0.0",
  "description": "smart contracts",
  "scripts": {
    "unit": "npx hardhat test",
    "configure": "git submodule update --init --recursive && npm ci",
    "compile": "npx hardhat compile",
    "node": "npx hardhat node",
    "exec-ova": "npx hardhat --network ova run",
    "exec-sepolia": "npx hardhat --network sepolia run",
    "exec-local": "npx hardhat --network localhost run",
    "prettier-sol": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "prettier-check-sol": "prettier --check --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "prettier-ts": "prettier --config .prettierrc 'test/**/*.ts' --write &&  prettier --config .prettierrc 'scripts/**/*.ts' --write",
    "prettier-check-ts": "prettier --config .prettierrc 'test/**/*.ts' --check &&  prettier --config .prettierrc 'scripts/**/*.ts' --check"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.2",
    "hardhat-gas-reporter": "^2.2.2",
    "hardhat-ethernal": "^3.3.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^3.4.1",
    "solidity-docgen": "^0.6.0-beta.36"
  },
  "dependencies": {
    "@aave/core-v3": "^1.19.3",
    "@ethersproject/address": "^5.7.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@types/big.js": "^6.2.2",
    "@types/node": "^18.11.2",
    "@uniswap/sdk-core": "^5.3.1",
    "@uniswap/v3-sdk": "^3.17.1",
    "big.js": "^5.2.1",
    "dotenv": "^16.0.3"
  },
  "license": "GPL-3.0-only"
}
